<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_ground_image">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back Button"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_back_button"
            app:tint="#000000" />

        <TextView
            android:id="@+id/helpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/backButton"
            android:layout_alignTop="@id/backButton"
            android:layout_marginStart="10dp"
            android:text="Help &amp; Support"
            android:textColor="#000000"
            android:textSize="32sp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/helpDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/helpTitle"
            android:layout_marginTop="20dp"
            android:text="If you need any assistance or support, please feel free to contact us via email or phone. We're here to help!"
            android:textColor="#000000"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/contactEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/helpDescription"
            android:layout_marginTop="20dp"
            android:text="Email: steganoworld@gmail.com"
            android:textColor="#000000"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/contactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactEmail"
            android:layout_marginTop="20dp"
            android:text="Phone: +91 7080 954 365"
            android:textColor="#000000"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground" />

    </RelativeLayout>
</ScrollView>

