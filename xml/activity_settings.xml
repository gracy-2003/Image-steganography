<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_image">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back Button"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_back_button" />

    <TextView
        android:id="@+id/settingsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/backButton"
        android:layout_alignTop="@id/backButton"
        android:layout_marginStart="10dp"
        android:text="Settings"
        android:textColor="#000000"
        android:textSize="30sp"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/settingsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile_placeholder"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:padding="2dp"
        android:clipToOutline="true" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="User Name"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameTextView"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="20dp">

        <!-- Account Option -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/accountOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="#000000"
                android:textSize="22sp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Encode Image Option -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/encodedImagesOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encoded Images"
                android:textColor="#000000"
                android:textSize="22sp"
                android:drawableStart="@drawable/encoded_image_icon"
                android:drawablePadding="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Privacy & Security Option -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/faqs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textColor="#000000"
                android:textSize="22sp"
                android:drawableStart="@drawable/faq_icon"
                android:drawablePadding="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Help & Support Option -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/helpSupportOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help &amp; Support"
                android:textColor="#000000"
                android:textSize="22sp"
                android:drawableStart="@drawable/help_support_icon"
                android:drawablePadding="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- About Option -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/aboutOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="#000000"
                android:textSize="22sp"
                android:drawableStart="@drawable/about_icon"
                android:drawablePadding="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Logout Option -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/logoutOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="#FF0000"
                android:textSize="22sp"
                android:drawableStart="@drawable/logout_icon"
                android:drawablePadding="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
