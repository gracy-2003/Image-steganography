<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground_image">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back Button"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_back_button" />

    <!-- User Name Text -->
    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/backButton"
        android:layout_alignTop="@id/backButton"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:text="Account"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center_vertical" />

    <!-- User Image Container -->
    <FrameLayout
        android:id="@+id/userImageContainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userNameTextView"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/userImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_placeholder"
            android:contentDescription="User Photo"
            android:background="@drawable/circle_background"
            android:clipToOutline="true" />
    </FrameLayout>

    <!-- Edit Profile Link -->
    <TextView
        android:id="@+id/editProfileLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userImageContainer"
        android:layout_marginTop="10dp"
        android:text="Edit Profile"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Edit Photo Link (Initially Hidden) -->
    <TextView
        android:id="@+id/editPhotoLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editProfileLink"
        android:layout_marginTop="10dp"
        android:text="Edit Photo"
        android:textColor="#ADD8E6"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- ScrollView for Input Fields -->
    <ScrollView
        android:id="@+id/inputFieldsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editProfileLink"
        android:layout_above="@id/saveButton"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Name Input -->
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/selectedImageView"
                android:hint="Name"
                android:textColorHint="#000000"
                android:padding="12dp"
                android:textColor="#000000"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:ellipsize="end"
                android:focusable="false"
                android:clickable="false" />

            <!-- Username Input -->
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/selectedImageView"
                android:hint="Username"
                android:textColorHint="#000000"
                android:padding="12dp"
                android:textColor="#000000"
                android:drawableStart="@drawable/user_name_icon"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:ellipsize="end"
                android:focusable="false"
                android:clickable="false" />

            <!-- DOB Input -->
            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/selectedImageView"
                android:hint="DOB (dd/mm/yyyy)"
                android:textColorHint="#000000"
                android:padding="12dp"
                android:textColor="#000000"
                android:drawableStart="@drawable/dob_icon"
                android:drawablePadding="10dp"
                android:inputType="date"
                android:maxLines="1"
                android:ellipsize="end"
                android:focusable="false"
                android:clickable="false" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/selectedImageView"
                android:hint="Email"
                android:textColorHint="#000000"
                android:padding="12dp"
                android:textColor="#000000"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:ellipsize="end"
                android:focusable="false"
                android:clickable="false" />

            <!-- Gender Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/genderLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginEnd="16dp" />

                <RadioGroup
                    android:id="@+id/genderRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/genderMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/genderFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="20sp"
                        android:textColor="#000000" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#009688"
        android:text="Save" />

</RelativeLayout>
